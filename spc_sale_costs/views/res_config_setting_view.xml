<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.commission.inherit.spc</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invoicing_settings']" position="after">
                <h2>User Company for SPC:</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" title="Company for records on other companies">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="text-muted">
                                Company for records on other companies
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="company_user_id" class="col-md-3 o_light_label"/>
                                    <field name="company_user_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <h2>User group for SPC:</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box" title="Group for records on other companies">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="text-muted">
                                Group for records on other companies
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="user_group_id" class="col-md-3 o_light_label"/>
                                    <field name="user_group_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

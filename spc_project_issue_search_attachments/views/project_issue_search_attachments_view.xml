<odoo>
    <data>
        <record id="view_issue_filter" model="ir.ui.view">
            <field name="name">Project Issue Search Attachments</field>
            <field name="model">project.issue</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="project_issue.view_project_issue_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search/field[@name='stage_id']" position="after">
                    <field name="attachment_ids" string="Related Attachments"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
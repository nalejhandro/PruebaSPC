<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_invoice_line_form_inherit" model="ir.ui.view">
        <field name="name">account.invoice.line.inherit</field>
        <field name="model">account.invoice.line</field>
        <field name="inherit_id" ref="account.view_invoice_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_analytic_id']" position="after">
                <field name="line_dest_id"/>
                <field name="invoice_dest_id"/>
            </xpath>
        </field>
    </record>

    <record id="spc_view_invoice_line_tree" model="ir.ui.view">
        <field name="name">account.invoice.line.tree.spc</field>
        <field name="model">account.invoice.line</field>
        <field name="arch" type="xml">
            <tree string="Invoice Line" create="false" delete="false" edit="false">
                <field name="name"/>
                <field name="account_id" groups="account.group_account_user"/>
                <field name="quantity"/>
                <field name="uom_id" groups="product.group_uom"/>
                <field name="price_unit"/>
                <field name="discount" groups="base.group_no_one"/>
                <field name="price_subtotal" sum="Total"/>
                <field name="currency_id"/>
            </tree>
        </field>
    </record>

    <!-- NOTE: The domain ('id', '>', 18873) is used to avoid historical records
               The ids 18320,18834,18833,18873,18832,18817,18872,18210
               are an exception for old invoices that do need to be shown.
               The product_id 44494 is used for special lines that are not
               invoiced. -->
    <record id="action_invoice_line_tree1" model="ir.actions.act_window">
        <field name="name">To be Invoiced to country</field>
        <field name="res_model">account.invoice.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="spc_view_invoice_line_tree"/>
        <field name="domain">['&amp;','|',('invoice_id', '>', 18873), ('product_id', '!=', 44494), ('quantity', '!=', 0), ('price_unit', '!=', 0), ('invoice_id.type','=','in_invoice'), ('invoice_id.state', 'not in', ['draft', 'cancel']), ('line_dest_id', '=', False)]</field>
    </record>

    <menuitem action="action_invoice_line_tree1" id="menu_action_invoice_line_tree1" parent="account.menu_finance_receivables_documents" sequence="7" groups="spc.group_invoice_to_country"/>
</odoo>

<odoo>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.spc</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='crm']" position="inside">
                    <h2>BC Sync Configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="bc_authorization_code"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="bc_uri"/>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="bc_template"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
</odoo>

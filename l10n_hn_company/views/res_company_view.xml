<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_company_form_inherit" model="ir.ui.view">
            <field name="name">View Company Form Inherit</field>
            <field name="model">res.company</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page[@string='Report Configuration']/group[@string='Configuration']" position="after">
                    <group string="Invoices">
                        <field name="cai" />
                        <field name="authorized_range" />
                        <field name="date_issue" />
                    </group>
                </xpath>
            </field>
        </record> 
    </data>
</odoo>
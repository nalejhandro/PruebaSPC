<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- views -->
        <!-- account.move -->
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">Manual Move Form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="manual_move" />
                </xpath>
            </field>
        </record>

        <record id="view_move_search" model="ir.ui.view">
            <field name="name">Manual Move Search</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_move_filter" />
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <xpath expr="//search/filter[2]" position="after">
                    <separator />
                    <filter string="Manual Entries" domain="[('manual_move','=',True)]" help="Entries created manually" />
                </xpath>
            </field>
        </record>

        <!-- account.move.line -->
        <record id="view_move_line_tree" model="ir.ui.view">
            <field name="name">Manual Move Line Tree</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree" />
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='move_id']" position="attributes">
                    <attribute name="context">{'default_manual_move': True}</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_move_line_form" model="ir.ui.view">
            <field name="name">Manual Move Line Form</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form" />
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_id']" position="attributes">
                    <attribute name="context">{'default_manual_move': True}</attribute>
                </xpath>
            </field>
        </record>

        <!-- actions -->
        <!-- account.move -->
        <record id="account.action_move_journal_line" model="ir.actions.act_window">
            <field name="context">{'default_manual_move': True}</field>
        </record>
</odoo>

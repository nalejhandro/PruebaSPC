<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sale_order_form" model="ir.ui.view">
            <field name="name">Sale Order View</field>
            <field name="model">sale.order</field>
            <field name="priority" eval="16"/>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='pricelist_id']" position="after">
                    <field name="date_delivery_equipment" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                    <field name="date_delivery_service" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                    <field name="date_invoicing" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
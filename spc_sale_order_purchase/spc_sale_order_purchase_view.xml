<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- views -->
        <!-- sale.order -->
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">Sale Order Purchase Form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/h1" position="after">
                    <div name="options">
                        <field name="purchase_done" class="oe_inline"
                            attrs="{'invisible': [('state','in',('draft','sent','cancel'))]}" />
                        <label for="purchase_done" class="oe_inline"
                            attrs="{'invisible': [('state','in',('draft','sent','cancel'))]}" />
                    </div>
                </xpath>
            </field>
        </record>

        <record id="view_order_search" model="ir.ui.view">
            <field name="name">Sale Order Purchase Search</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter" />
            <field name="priority" eval="16" />
            <field name="arch" type="xml">
                <xpath expr="//search/filter[@name='draft']" position="after">
                    <filter string="Purchase Done" name="purchase_done" domain="[('purchase_done','=',True)]" />
                    <filter string="Purchase Not Done" name="purchase_not_done" domain="[('purchase_done','=',False)]" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>